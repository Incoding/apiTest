<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd"
       default-lazy-init="true">


    <bean class="com.javaapi.test.spring.feature.propertyeditor.PersonEntity"/>

    <bean id="customEditorConfigurer" class="org.springframework.beans.factory.config.CustomEditorConfigurer">
        <property name="customEditors">
            <map>
                <entry key="com.javaapi.test.spring.feature.propertyeditor.Telephone"
                       value="com.javaapi.test.spring.feature.propertyeditor.TelephonePropertyEditor"/>
            </map>
        </property>
    </bean>

</beans>